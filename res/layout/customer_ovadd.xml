<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText,RtlHardcoded,SpUsage" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnCusAdBackx"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/btnhijau"
            android:minHeight="30dp"
            android:minWidth="30dp"
            android:text="Back"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnCusAdPosx"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btnCusAdBackx"/>

        <Button
            android:id="@+id/btnCusAdSavex"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/btnhijau"
            android:minHeight="30dp"
            android:minWidth="30dp"
            android:text="Save"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnCusAdDelx"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btnCusAdSavex"
            android:background="@drawable/btnhijau"
            android:minHeight="30dp"
            android:minWidth="30dp"
            android:text="Delete"
            android:textSize="10dp" />

        <Button
            android:id="@+id/button1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btnCusAdPosx"
            android:background="@drawable/btnhijau"
            android:minHeight="30dp"
            android:minWidth="30dp"
            android:text="Next >"
            android:textSize="10dp" />

        <Button
            android:id="@+id/button2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btnCusAdBackx"
            android:layout_toRightOf="@+id/button1"
            android:background="@drawable/btnhijau"
            android:minHeight="30dp"
            android:minWidth="30dp"
            android:text="&lt; First"
            android:textSize="10dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Customer Detail Information" />

    </LinearLayout>

    <ListView
        android:id="@+id/android:list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

</LinearLayout>